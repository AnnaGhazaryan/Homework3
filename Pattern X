//Pattern X
console.log("Please enter ODD number of rows : ");
 var n = 15;
 var a = "";
 if (n % 2 == 1){
 for(var i = 1; i <= n; i++) {
   a = "";
   for (var j = 1; j <= n; j++) {
     if ((j == i) || ((i+j) == n + 1)) {
       a += "*";
     } else {
a += " ";
} 
   } console.log (a); 
 }
 }
 else {
   console.log("INPUT CORRECT NUMBER FOR n :")
 }
